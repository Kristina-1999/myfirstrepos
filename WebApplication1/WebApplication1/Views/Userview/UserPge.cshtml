<link href="Site.css" rel="stylesheet" type="text/css" />
@{
	ViewBag.Title = "User";
}
@using (Html.BeginForm("UserPge", "Userview", FormMethod.Post))
{
<div class="col-xs-6" style="flex: 1; flex-grow:10; width: 50%;">
	<hr />
	<h4>Вход в личный кабинет</h4>
	<hr />
	<div class="col-xs-5" style="flex: 1; flex-grow:10;">
		<div class="row">
			<div class="text-left" style="font-size:18px;">
				Логин:
			</div>
		</div>
		<div class="row">
			<div class="text-left" style="font-size:18px;">
				Пароль:
			</div>
		</div>
	</div>
	<div class="col-xs-5" style="flex: 1; flex-grow:10;">
		<div class="row">
			<input type="text" id="LN" name="LN" />
		</div>
		<div class="row">
			<input type="password" id="LP" name="LP" />
		</div>
	</div>
	<div class="row">
		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" name="LNB" id="LNB" value="Войти" class="btn btn-default"/>
			</div>
		</div>
	</div>
</div>
<div class="col-xs-6" style="flex: 1; flex-grow:10;width: 50%;">
	<hr />
	<h4>Регистрация</h4>
	<hr />
	<div class="col-xs-5" style="flex: 1; flex-grow:10;">
		<div class="text-left" style="font-size:18px;">
			Логин:
		</div>
		<div class="text-left" style="font-size:18px;">
			Пароль:
		</div>
		<div class="text-left" style="font-size:18px;">
			E-Mail:
		</div>
	</div>
	<div class="col-xs-5" style="flex: 1; flex-grow:10;">
		<div class="row">
			<input type="text" id="RegName" name="RN" />
		</div>
		<div class="row">
			<input type="password" id="RegPass" name="RP" />
		</div>
		<div class="row">
			<input type="text" id="RegMail" name="RM" />
		</div>
	</div>
	<div class="row">
		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" name="RGB" id="RGB" value="Зарегистрироваться" class="btn btn-default" />
			</div>
		</div>
	</div>
</div>
}