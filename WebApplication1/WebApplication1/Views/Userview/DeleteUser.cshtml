@model WebApplication1.Models.User
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>Вы действительно хотите удалить этого пользователя?</h3>
<div>
	<h4>Пользователь</h4>
	<hr />
	<dl class="dl-horizontal">
		<dt>
			@Html.Label("Username", htmlAttributes: new { @class = "control-label col-md-5" })
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Username)
		</dd>

		<dt>
			@Html.Label("Mail", htmlAttributes: new { @class = "control-label col-md-5" })
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Email)
		</dd>

		<dt>
			@Html.Label("Password", htmlAttributes: new { @class = "control-label col-md-5" })
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Password)
		</dd>

	</dl>

	@using (Html.BeginForm())
	{
		<div class="form-actions no-color">
			<input type="submit" value="Удалить" class="btn btn-default" /> |
			@Html.ActionLink("В кабинет", "LKA")
		</div>
	}
</div>