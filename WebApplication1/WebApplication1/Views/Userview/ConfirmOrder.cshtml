@model WebApplication1.Models.Order
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>Вы действительно хотите подтвердить оплату заказа?</h3>
<div>
	<h4>Заказ</h4>
	<hr />
	<dl class="dl-horizontal">
		<dt>
			@Html.Label("Номер", htmlAttributes: new { @class = "control-label col-md-5" })
		</dt>

		<dd>
			@Html.DisplayFor(model => model.id)
		</dd>

	</dl>

	@using (Html.BeginForm())
	{
		<div class="form-actions no-color">
			<input type="submit" value="Подтвердить" class="btn btn-default" /> |
			@Html.ActionLink("В кабинет", "LKA")
		</div>
	}
</div>